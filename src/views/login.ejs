<div class="login-section">
  <h1 class="login-title">Login</h1>
  <form action="/login" method="POST" class="login-form">
    <div class="form-group">
      <input
        type="email"
        name="email"
        placeholder="Email"
        required
        class="form-input"
      />
    </div>
    <div class="form-group">
      <input
        type="password"
        name="password"
        placeholder="Password"
        required
        class="form-input"
      />
    </div>
    <button type="submit" class="login-button">Login</button>
  </form>
</div>
